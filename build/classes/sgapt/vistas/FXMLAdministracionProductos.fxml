<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sgapt.controladores.FXMLAdministracionProductosController">
   <children>
      <TableView fx:id="tvProductos" layoutX="38.0" layoutY="194.0" prefHeight="455.0" prefWidth="1200.0" stylesheets="@../css/estilos.css">
        <columns>
          <TableColumn fx:id="colNombre" prefWidth="236.0" text="Nombre producto" />
          <TableColumn fx:id="colTipoProducto" prefWidth="173.0" text="Tipo de producto" />
            <TableColumn fx:id="colDisponibilidad" minWidth="7.0" prefWidth="102.0" text="Disponibilidad" />
            <TableColumn fx:id="colCantidad" prefWidth="92.0" text="Cantidad" />
            <TableColumn fx:id="colFechaCaducidad" minWidth="1.0" prefWidth="168.0" text="Fecha de caducidad" />
            <TableColumn fx:id="colRequiereReceta" prefWidth="168.0" text="Requiere de receta" />
            <TableColumn fx:id="colNumeroLote" prefWidth="95.0" text="Número lote" />
            <TableColumn fx:id="colPrecio" prefWidth="165.0" text="Precio unitario" />
        </columns>
      </TableView>
      <Label layoutX="433.0" layoutY="47.0" text="Administración de productos">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <ImageView fitHeight="61.0" fitWidth="220.0" layoutX="1040.0" layoutY="47.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/FarmaTech.png" />
         </image>
      </ImageView>
      <Button layoutX="52.0" layoutY="47.0" mnemonicParsing="false" onAction="#clicBtnRegresar" prefHeight="60.0" prefWidth="61.0" styleClass="buttonCancelar" stylesheets="@../css/estilos.css" textFill="WHITE">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <graphic>
            <ImageView fitHeight="37.0" fitWidth="59.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/back.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <ComboBox fx:id="cbSucursales" layoutX="1050.0" layoutY="136.0" prefHeight="42.0" prefWidth="188.0" promptText="Seleccionar sucursal" styleClass="buttonInicioSesion" stylesheets="@../css/estilos.css" />
      <Label layoutX="958.0" layoutY="142.0" text="Sucursal">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Button layoutX="750.0" layoutY="136.0" mnemonicParsing="false" onAction="#clicEliminarProducto" styleClass="buttonCancelar" stylesheets="@../css/estilos.css" text="Eliminar producto">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button layoutX="560.0" layoutY="136.0" mnemonicParsing="false" onAction="#clicEditarProducto" styleClass="buttonInicioSesion" stylesheets="@../css/estilos.css" text="Editar producto">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button layoutX="350.0" layoutY="136.0" mnemonicParsing="false" onAction="#clicAgregarProducto" styleClass="buttonInicioSesion" stylesheets="@../css/estilos.css" text="Agregar producto">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Button>
      <Button layoutX="280.0" layoutY="136.0" mnemonicParsing="false" onAction="#clicVisualizarProducto" prefHeight="42.0" prefWidth="44.0" styleClass="buttonInicioSesion" stylesheets="@../css/estilos.css">
         <graphic>
            <ImageView fitHeight="37.0" fitWidth="38.0">
               <image>
                  <Image url="@../img/icons8_picture_512px_1.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
